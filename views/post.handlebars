<div class="row mb-4 project post">
    <div class="col-md-5">
        <h2>{{title}}</h2>
    </div>
    <div class="col-md-7">
        <p>Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
    <div>
        <p>{{content}}</p>
    </div>
</div>
{{#each comments as |comment| }}
<div class="row mb-4 comment">
    <p>{{comment.content}} <br> Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
</div>
{{/each}}
<div id="post-id" hidden>{{id}}</div>
<div class="row mb-4 new-comment">
    <h3>New Comment</h3>
    <form class="form comment-form">
        <div class="form-group">
            <textarea class="form-input" type="textarea" id="comment-body" placeholder="Type comment here"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>

<script src="../js/newcomment.js"></script>
