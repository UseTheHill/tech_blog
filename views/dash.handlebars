{{#each posts as |post| }}
<div class="row mb-4 project post">
  <div class="col-md-5">
    <h2>
      <a href="/modpost/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>{{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}

<div>
    <button type="button"><a href="/newpost">New Post</a></button>
</div>